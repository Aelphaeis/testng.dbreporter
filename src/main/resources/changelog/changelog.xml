<databaseChangeLog
	xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
	xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog 
		http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd
        http://www.liquibase.org/xml/ns/dbchangelog-ext 
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">
	<changeSet id="1" author="morain">
		<createTable tableName="testng_results">
			<column name="id" type="int" autoIncrement="true">
				<constraints primaryKey="true" />
			</column>
			<column name="passed" type="int">
				<constraints nullable="false" />
			</column>
			<column name="failed" type="int">
				<constraints nullable="false" />
			</column>
			<column name="skipped" type="int">
				<constraints nullable="false" />
			</column>
			<column name="total" type="int">
				<constraints nullable="false" />
			</column>
			<column name="start" type="timestamp">
				<constraints nullable="false" />
			</column>
			<column name="end" type="timestamp">
				<constraints nullable="false" />
			</column>
		</createTable>
	</changeSet>
	<changeSet id="2" author="morain">
		<createTable tableName="testng_suites">
			<column name="id" type="int" autoIncrement="true">
				<constraints primaryKey="true" />
			</column>
			<column name="name" type="varchar(128)">
				<constraints nullable="false" />
			</column>
			<column name="start" type="timestamp">
				<constraints nullable="false" />
			</column>
			<column name="end" type="timestamp">
				<constraints nullable="false" />
			</column>
			<column name="testng_results_id" type="int">
				<constraints nullable="false" />
			</column>
		</createTable>
	</changeSet>
	<changeSet id="3" author="morain">
		<createTable tableName="testng_tests">
			<column name="id" type="int" autoIncrement="true">
				<constraints primaryKey="true" />
			</column>
			<column name="name" type="varchar(128)">
				<constraints nullable="false" />
			</column>
			<column name="start" type="timestamp">
				<constraints nullable="false" />
			</column>
			<column name="end" type="timestamp">
				<constraints nullable="false" />
			</column>
			<column name="testng_suite_id" type="int">
				<constraints nullable="false" />
			</column>
		</createTable>
	</changeSet>
	<changeSet id="4" author="morain">
		<createTable tableName="testng_classes">
			<column name="id" type="int" autoIncrement="true">
				<constraints primaryKey="true" />
			</column>
			<column name="name" type="varchar(128)">
				<constraints nullable="false" />
			</column>
			<column name="packageName" type="varchar(128)">
				<constraints nullable="false" />
			</column>
			<column name="testng_test_id" type="int">
				<constraints nullable="false" />
			</column>
		</createTable>
	</changeSet>
	<changeSet id="5" author="morain">
		<createTable tableName="testng_method_statuses">
			<column name="id" type="int" autoIncrement="false ">
				<constraints primaryKey="true" />
			</column>
			<column name="name" type="varchar(32)">
				<constraints nullable="false" />
			</column>
		</createTable>
		<insert tableName="testng_method_statuses">
			<column name="id" value="1" />
			<column name="name" value="SUCCESS" />
		</insert>
		<insert tableName="testng_method_statuses">
			<column name="id" value="2" />
			<column name="name" value="FAILURE" />
		</insert>
		<insert tableName="testng_method_statuses">
			<column name="id" value="3" />
			<column name="name" value="SKIP" />
		</insert>
		<insert tableName="testng_method_statuses">
			<column name="id" value="4" />
			<column name="name" value="SUCCESS_PERCENTAGE_FAILURE" />
		</insert>
	</changeSet>
	<changeSet id="6" author="morain">
		<createTable tableName="testng_methods">
			<column name="id" type="int" autoIncrement="true">
				<constraints primaryKey="true" />
			</column>
			<column name="name" type="varchar(128)">
				<constraints nullable="false" />
			</column>
			<column name="instanceName" type="varchar(128)">
				<constraints nullable="false" />
			</column>
			<!-- not sure about this size. -->
			<column name="description" type="varchar(512)">
				<constraints nullable="false" />
			</column>
			<column name="status_id" type="int">
				<constraints nullable="false" />
			</column>
			<column name="isRetried" type="boolean">
				<constraints nullable="false" />
			</column>
			<column name="isConfig" type="boolean">
				<constraints nullable="false" />
			</column>
			<column name="start" type="timestamp">
				<constraints nullable="false" />
			</column>
			<column name="end" type="timestamp">
				<constraints nullable="false" />
			</column>
			<column name="testng_class_id" type="int">
				<constraints nullable="false" />
			</column>
		</createTable>
	</changeSet>
</databaseChangeLog>